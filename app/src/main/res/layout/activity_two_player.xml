<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    tools:context="com.example.jogodavelha.TwoPlayerActivity">


    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/matriz2"></ImageView>

        <ImageView
            android:id="@+id/img1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="24dp"
            android:layout_above="@+id/img6"
            android:layout_toStartOf="@+id/img2"
            android:layout_marginBottom="68dp" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/img1"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_alignTop="@+id/img2"
            android:layout_toEndOf="@+id/img5" />

        //segunda linha

        <ImageView
            android:id="@+id/img4"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/img1" />

        <ImageView
            android:id="@+id/img5"
            android:layout_width="70dp"
            android:layout_height="95dp"
            android:layout_alignTop="@+id/img4"
            android:layout_alignStart="@+id/img2"
            android:layout_marginTop="2dp" />

        <ImageView
            android:id="@+id/img6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/img5"
            android:layout_alignStart="@+id/img3"
            android:layout_marginStart="12dp" />

        //terceira linha

        <ImageView
            android:id="@+id/img7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/img4"
            android:layout_marginBottom="63dp" />

        <ImageView
            android:id="@+id/img8"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_alignTop="@+id/img7"
            android:layout_toEndOf="@+id/img1" />

        <ImageView
            android:id="@+id/img9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignBottom="@+id/img8"
            android:layout_toEndOf="@+id/img5" />


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
